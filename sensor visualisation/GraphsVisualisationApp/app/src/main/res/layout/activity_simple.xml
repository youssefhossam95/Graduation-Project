<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SimpleActivity">

    <com.hitomi.cmlibrary.CircleMenu
        android:id="@+id/circle_menu"
        android:layout_width="123dp"
        android:layout_height="95dp"
        android:layout_alignBottom="@+id/toggleButton"
        android:layout_alignStart="@+id/sensitivityThreshold"
        android:layout_marginBottom="18dp"
        android:longClickable="false"
        android:scaleX="2.6"
        android:scaleY="2.6" />

    <TextView
        android:id="@+id/typeTextBox"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_above="@+id/longitudeText"
        android:layout_alignParentEnd="true"
        android:textAlignment="center" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/sensitivityThreshold"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />


    <at.markushi.ui.CircleButton
        android:id="@+id/uploadButton"
        android:layout_width="60dp"
        android:layout_height="71dp"
        android:layout_above="@+id/circle_menu"
        android:layout_alignParentEnd="true"
        android:src="@drawable/upload"
        app:cb_color="?attr/colorSwitchThumbNormal"
        app:cb_pressedRingWidth="16dp" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="33dp"
        android:background="@drawable/style_toggle_button"
        android:textOff=""
        android:textOn="" />

    <TextView
        android:id="@+id/applicationModeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/circle_menu"
        android:text="Buttons Mode"
        android:textColor="@android:color/black"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/latitudeTextLayOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/longitudeTextLayOut"
        android:layout_alignStart="@+id/longitudeTextLayOut"
        android:layout_below="@+id/longitudeTextLayOut"
        android:layout_marginTop="11dp"
        android:text="Latitude : "
        android:textStyle="bold" />

    <TextView
        android:id="@+id/longitudeTextLayOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="Longitude : "
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/sensitivityThreshold"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_above="@+id/longitudeTextLayOut"
        android:layout_marginBottom="14dp"
        android:layout_toEndOf="@+id/sensitivityThreshLayout"
        android:layout_toStartOf="@+id/speedAverageLayout"
        android:clickable="false"
        android:fitsSystemWindows="false"
        android:isScrollContainer="false"
        android:keepScreenOn="false"
        android:labelFor="@+id/sensitivityThreshLayout"
        android:longClickable="false" />

    <TextView
        android:id="@+id/sensitivityThreshLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/sensitivityThreshold"
        android:text="Sensitivity"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/defectsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/latitudeTextLayOut"
        android:layout_below="@+id/latitudeTextLayOut"
        android:layout_marginTop="13dp"
        android:text="Number Of Files : "
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fileNumbersText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/defectsLayout"
        android:layout_alignBottom="@+id/defectsLayout"
        android:layout_toEndOf="@+id/defectsLayout" />

    <TextView
        android:id="@+id/longitudeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sensitivityThreshold"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/sensitivityThreshLayout" />

    <TextView
        android:id="@+id/latitudeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/latitudeTextLayOut"
        android:layout_alignEnd="@+id/typeBoxLayOut"
        android:layout_alignStart="@+id/longitudeText" />


    <TextView
        android:id="@+id/averageSpeedTextBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/graph"
        android:layout_toEndOf="@+id/speedAverageLayout"
        tools:layout_editor_relativeX="118dp"
        tools:layout_editor_relativeY="500dp" />

    <TextView
        android:id="@+id/typeBoxLayOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/typeTextBox"
        android:layout_alignTop="@+id/typeTextBox"
        android:layout_marginEnd="18dp"
        android:layout_toStartOf="@+id/typeTextBox"
        android:text="Type : "
        android:textStyle="bold" />

    <TextView
        android:id="@+id/speedAverageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/averageSpeedTextBox"
        android:layout_alignBottom="@+id/averageSpeedTextBox"
        android:layout_toStartOf="@+id/uploadButton"
        android:text="Average Speed : "
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/circle_menu"
        android:text="Upload Files"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <!--<Button
        android:layout_width="wrap_content"
        android:id="@+id/createFilesButton"
        android:onClick="createFiles"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/defectsLayout"
        android:text="create 499 File" />-->
</RelativeLayout>
