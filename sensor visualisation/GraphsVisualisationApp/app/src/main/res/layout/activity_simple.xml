<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.youssefhossam.graphsvisualisationapp.SimpleActivity">

    <com.hitomi.cmlibrary.CircleMenu
        android:id="@+id/circle_menu"
        android:layout_width="123dp"
        android:layout_height="95dp"
        android:layout_alignBottom="@+id/uploadButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="false"
        android:layout_marginEnd="13dp"
        android:layout_toStartOf="@+id/commentTextBox"
        android:longClickable="false"
        android:scaleX="2.4"
        android:scaleY="2.4" />

    <TextView
        android:id="@+id/typeTextBox"
        android:layout_width="156dp"
        android:layout_height="33dp"
        android:layout_above="@+id/CommentLayOut"
        android:layout_alignParentEnd="true"
        tools:layout_editor_relativeX="118dp"
        tools:layout_editor_relativeY="500dp" />

    <TextView
        android:id="@+id/commentTextBox"
        android:layout_width="155dp"
        android:layout_height="43dp"
        android:layout_alignEnd="@+id/sensitivityThreshold"
        android:layout_below="@+id/latitudeText" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/sensitivityThreshold"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />


    <at.markushi.ui.CircleButton
        android:id="@+id/uploadButton"
        android:layout_width="60dp"
        android:layout_height="71dp"
        android:layout_above="@+id/toggleButton"
        android:layout_alignEnd="@+id/commentTextBox"
        android:layout_marginBottom="31dp"
        android:layout_marginEnd="14dp"
        android:src="@drawable/upload"
        app:cb_color="?attr/colorSwitchThumbNormal"
        app:cb_pressedRingWidth="16dp" />

    <TextView
        android:id="@+id/latitudeTextLayOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/longitudeTextLayOut"
        android:layout_alignStart="@+id/longitudeTextLayOut"
        android:layout_below="@+id/longitudeTextLayOut"
        android:layout_marginTop="11dp"
        android:text="Latitude"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/longitudeTextLayOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="Longitude"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/sensitivityThreshold"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_above="@+id/longitudeTextLayOut"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/longitudeTextLayOut"
        android:clickable="false"
        android:fitsSystemWindows="false"
        android:isScrollContainer="false"
        android:keepScreenOn="false"
        android:labelFor="@+id/sensitivityThreshLayout"
        android:longClickable="false" />

    <TextView
        android:id="@+id/sensitivityThreshLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/sensitivityThreshold"
        android:text="Sensitivity"
        android:textStyle="bold" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="103dp"
        android:layout_height="39dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textOff="Buttons Mode"
        android:textOn="Voice Mode" />

    <TextView
        android:id="@+id/defectsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/latitudeTextLayOut"
        android:layout_below="@+id/latitudeTextLayOut"
        android:layout_marginTop="13dp"
        android:text="Number Of Files"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fileNumbersText"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_alignBottom="@+id/defectsLayout"
        android:layout_toStartOf="@+id/toggleButton" />

    <TextView
        android:id="@+id/longitudeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sensitivityThreshold"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/sensitivityThreshLayout" />

    <TextView
        android:id="@+id/latitudeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/defectsLayout"
        android:layout_alignStart="@+id/longitudeText" />

    <TextView
        android:id="@+id/typeBoxLayOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/latitudeText"
        android:layout_alignEnd="@+id/circle_menu"
        android:text="Type"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/CommentLayOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fileNumbersText"
        android:layout_toStartOf="@+id/commentTextBox"
        android:text="Comment"
        android:textStyle="bold" />

</RelativeLayout>
