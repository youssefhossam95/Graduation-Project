<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch Mode"
        android:id="@+id/buttonMode"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:onClick="switchModeClick" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matab"
        android:id="@+id/buttonMatab"
        android:layout_below="@+id/buttonMode"
        android:layout_alignParentStart="true"
        android:visibility="invisible"
        android:onClick="matabClick"
        android:layout_marginTop="122dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hofra"
        android:id="@+id/buttonHofra"
        android:layout_alignTop="@+id/buttonMatab"
        android:visibility="invisible"
        android:onClick="hofraClick"
        android:layout_toEndOf="@+id/buttonMode" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Takser"
        android:id="@+id/buttonTakser"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/buttonMode"
        android:visibility="invisible"
        android:onClick="takserClick"
        android:layout_marginBottom="54dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ghlat"
        android:id="@+id/buttonGhlat"
        android:layout_alignBottom="@+id/buttonTakser"
        android:visibility="invisible"
        android:onClick="ghlatClick"
        android:layout_alignStart="@+id/buttonHofra" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Haraka"
        android:id="@+id/buttonHaraka"
        android:layout_above="@+id/buttonGhlat"
        android:onClick="harakaClick"
        android:layout_alignEnd="@+id/buttonMode" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView"
        android:layout_above="@+id/buttonHofra"
        android:layout_alignStart="@+id/buttonTakser" />
</RelativeLayout>
